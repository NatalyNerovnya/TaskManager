@model TaskManager.Models.TaskViewModel

@if(User.Identity.IsAuthenticated)
{ 
<div class=" col-md-11 ">
    <div class="panel">
        <div class="panel-heading text-center ">
            <h3>Creating new task</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("CreateTask", "Home", FormMethod.Post@*, new { enctype = "multipart/form-data" }*@))
            {
                 <fieldset>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter name of the task" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter the description" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ToUserId)
                        @Html.TextBoxFor(m => m.ToUserId, new { @class = "form-control", @placeholder = "Enter the id of the user" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.FromUserId)
                        @Html.TextBoxFor(m => m.FromUserId, new { @class = "form-control", @placeholder = "Enter the id of the user from" })
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success btn-lg btn-block" >Create</button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-info btn-lg btn-block">Cancel</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
       
    </div>
</div>
}
