@model TaskManager.Models.TaskViewModel

<div id="content">
    <ul id="tabs" class="nav nav-tabs nav-justified" data-tabs="tabs">
        <li class="active">
            <a data-toggle="tab" href="#user">
                <span class="glyphicon glyphicon-user"></span>
            </a>
        </li>
        @if (User.Identity.IsAuthenticated)
        {
            <li>
                <a data-toggle="tab" href="#done">
                    <span class="glyphicon glyphicon-ok"></span>
                </a>
            </li>

            <li>
                <a data-toggle="tab" href="#tasks">
                    <span class="glyphicon glyphicon-th-list"></span>
                </a>
            </li>

        }
    </ul>
    <div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="user">
            @if (!HttpContext.Current.User.Identity.IsAuthenticated)
            {
                @Html.Partial("_Login");
            }
            else
            {
                @Html.Partial("_Logout");
            }
        </div>
        @if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <div class="tab-pane" id="done">

                @Html.Partial("_Box")
            </div>

            <div class="tab-pane" id="tasks">
                <div class="well">
                    <strong>Total Files = </strong> @*@Model.CountFiles*@
                </div>
                <div class="well">
                    <strong>Total Size =  </strong>  @*@Model.TotalSize / 10000*@
                </div>
            </div>
        }
    </div>
</div>

