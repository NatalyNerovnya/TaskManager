<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title Task Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <link href="~/Content/bootstrap-3.3.4-dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <link href="~/Content/GridStyle.css" rel="stylesheet" />
    <link href="~/Content/jquery.validate.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</head>
<body>
    @Html.Partial("_Header")

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3" id="left-menu">
                @Html.Partial("_LeftMenu")
            </div>
            <div class="col-md-9">
                @*@Html.Partial("_TaskMenu")*@
                <div class="row main" id="main">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Content/bootstrap-3.3.4-dist/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.bootstrap.min.js"></script>
    <script src="~/Content/bootstrap-3.3.4-dist/js/customJS.js"></script>
    <script src="~/Scripts/JavaScript.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>