<table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email </th>
            @if (User.Identity.Name != "Nataly")
            {
            <th>Password</th> }
            
        </tr>
    </thead>
    <tbody>
        @if (User.Identity.Name == "Nataly")
        {
            foreach (var user in ViewBag.Users)
            {
            <tr>
                <td>@user.Login</td>
                <td>@user.Email</td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td>@ViewBag.User.Login</td>
                <td>@ViewBag.User.Email</td>
                <td>@ViewBag.User.Password</td>
            </tr>
        }


    </tbody>

        
</table>


